<h1>Listing projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="5">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td>
            <%= link_to 'Create Task', new_project_task_path(project), class: 'link-design btn-sm btn-primary' %>
            &nbsp; 
            <%= link_to 'Show Task', project_tasks_path(project), class: 'link-design btn-sm btn-primary' %>
            &nbsp; 
            <%= link_to 'Edit', edit_project_path(project), class: 'link-design btn-sm btn-primary' %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' },class: 'link-design btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary link-design' %>
