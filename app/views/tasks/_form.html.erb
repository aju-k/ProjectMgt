<%= form_for( [@project, @project.tasks.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="fields">
      <%= f.label :developers%>
      <%=select_tag "developers", options_from_collection_for_select(@developers, "id", "email"),  multiple: true, class: 'chosen-select form-control' %>
    </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
