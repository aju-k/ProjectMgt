<h1>Listing Task Of <%= @project.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Developer Names</th>
    </tr>
  </thead>

  <tbody>
    <% count = 0%>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.users.collect(&:name).join(', ')%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_project_task_path(@project), class: 'link-design btn btn-primary' %>
